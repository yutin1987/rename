html(ng-app="myApp")
  head
    meta(http-equiv='Content-Type', content='text/html;charset=UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no')
    meta(name='description', content='')
    meta(name='author', content='')
    title 
    script(type='text/javascript', src='./script/fw.js')
      
    link(rel='stylesheet', type='text/css', href='./style/page.css')
    script(type='text/javascript', src='./script/page.js')
    
  body#viewport(class="{{display}}",ng-controller="PlayerCtrl")
    #navi.navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        a.brand Truth or Dare
        .navi.navi-player(ng-click="viewPlayer()") 玩家
    div
      div#player
        form
          .input-append
            input.name(type="text",ng-model="playerName",placeholder="player name")
            input.btn.btn-primary(type="button",ng-click="addBoy()",value="Boy")
            input.btn.btn-primary(type="button",ng-click="addGirl()",value="Girl")
        label
          span {{boys.length}} 個男人
          a(ng-click="delBoy()") [ 刪除選取 ]
        ul
          li(ng-repeat="boy in boys")
            input(type="checkbox",ng-model="boy.check")
            span {{boy.name}}
        label
          span {{girls.length}} 個女人
          a(ng-click="delGirl()") [ 刪除選取 ]
        ul
          li(ng-repeat="girl in girls")
            input(type="checkbox",ng-model="girl.check")
            span {{girl.name}}
      div#view
        div.view.view-boy
          .target &#62; BOY
          .assignment {{assignment}}
        div.view.view-girl
          .target &#62; GIRL
          .assignment {{assignment}}
      div#button
        .btn.btn-boy(ng-click="getQ4Boy()"): span BOY
        .btn.btn-girl(ng-click="getQ4Girl()"): span GIRL